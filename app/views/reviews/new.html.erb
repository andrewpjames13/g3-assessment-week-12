<% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
<% end %>

<%= form_for @review do |f|  %>
  <%= f.label :movie_id %>
  <%= f.collection_select :movie_id, Movie.all, :id, :title %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>
